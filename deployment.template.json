{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "settings": {
            "minDockerVersion": "v1.25",
            "privateRegistry": {
              "username": "${ACR_USER}",
              "password": "${ACR_PASS}",
              "address": "${DEVOPS_IOTEDGE_REGISTRY_URL}"
            }
          },
          "type": "docker"
        },
        "systemModules": {
          "edgeAgent": {
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": ""
            },
            "type": "docker"
          },
          "edgeHub": {
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"443/tcp\":[{\"HostPort\":\"443\"}],\"5671/tcp\":[{\"HostPort\":\"5671\"}],\"8883/tcp\":[{\"HostPort\":\"8883\"}]}}}"
            },
            "type": "docker",
            "status": "running",
            "restartPolicy": "always"
          }
        },
        "modules": {
          "pump": {
            "settings": {
              "image": "${MODULES.PumpModule}",
              "createOptions": {
                "HostConfig": {
                  "LogConfig": {
                    "Type": "json-file",
                    "Config": {
                      "max-size": "2m",
                      "max-file": "3"
                    }
                  }
                }
              }
            },
            "type": "docker",
            "version": "1.0",
            "env": {
              "ASSET": {
                "value": "$ASSET"
              },
              "DEVICE": {
                "value": "pump"
              },
              "APPINSIGHTS_INSTRUMENTATIONKEY": {
                "value": "$APPINSIGHTS_INSTRUMENTATIONKEY"
              }
            },
            "status": "running",
            "restartPolicy": "always"
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "routes": {
          "upstream": "FROM /messages/* INTO $upstream"
        },
        "schemaVersion": "1.0",
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "pump": {
      "properties.desired": {
        "SendInterval": 10
      }
    }
  }
}