{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "privateRegistry": {
                "username": "${ACR_USER}",
                "password": "${ACR_PASSWORD}",
                "address": "${ACR_HOST}"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": ""
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"443/tcp\":[{\"HostPort\":\"443\"}],\"5671/tcp\":[{\"HostPort\":\"5671\"}],\"8883/tcp\":[{\"HostPort\":\"8883\"}]}}}"
            }
          }
        },
        "modules": {
          "pump1": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.PumpModule}",
              "createOptions": {
                "HostConfig": {
                  "LogConfig": {
                    "Type": "json-file",
                    "Config": {
                      "max-size": "2m",
                      "max-file": "3"
                    }
                  }
                }
              }
            },
            "env": {
              "APPINSIGHTS_INSTRUMENTATIONKEY": {
                  "value": "${APPINSIGHTS_INSTRUMENTATIONKEY}"
              },
              "DEVICE": {
                "value": "pump1"
              }
            }
          },
          "pump2": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.PumpModule}",
              "createOptions": {
                "HostConfig": {
                  "LogConfig": {
                    "Type": "json-file",
                    "Config": {
                      "max-size": "2m",
                      "max-file": "3"
                    }
                  }
                }
              }
            },
            "env": {
              "APPINSIGHTS_INSTRUMENTATIONKEY": {
                  "value": "${APPINSIGHTS_INSTRUMENTATIONKEY}"
              },
              "DEVICE": {
                "value": "pump2"
              }
            }
          },
          "pump3": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.PumpModule}",
              "createOptions": {
                "HostConfig": {
                  "LogConfig": {
                    "Type": "json-file",
                    "Config": {
                      "max-size": "2m",
                      "max-file": "3"
                    }
                  }
                }
              }
            },
            "env": {
              "APPINSIGHTS_INSTRUMENTATIONKEY": {
                  "value": "${APPINSIGHTS_INSTRUMENTATIONKEY}"
              },
              "DEVICE": {
                "value": "pump3"
              }
            }
          },
          "pump4": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.PumpModule}",
              "createOptions": {
                "HostConfig": {
                  "LogConfig": {
                    "Type": "json-file",
                    "Config": {
                      "max-size": "2m",
                      "max-file": "3"
                    }
                  }
                }
              }
            },
            "env": {
              "APPINSIGHTS_INSTRUMENTATIONKEY": {
                  "value": "${APPINSIGHTS_INSTRUMENTATIONKEY}"
              },
              "DEVICE": {
                "value": "pump4"
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "routes": {
          "Pump1ToIoTHub": "FROM /messages/modules/pump1/outputs/* INTO $upstream",
          "Pump2ToIoTHub": "FROM /messages/modules/pump2/outputs/* INTO $upstream",
          "Pump3ToIoTHub": "FROM /messages/modules/pump3/outputs/* INTO $upstream",
          "Pump4ToIoTHub": "FROM /messages/modules/pump4/outputs/* INTO $upstream"
        },
        "schemaVersion": "1.0",
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "pump1": {
      "properties.desired": {
        "SendInterval": 1000,
        "SendData": true,
        "EventCount": 1
      }
    },
    "pump2": {
      "properties.desired": {
        "SendInterval": 1000,
        "SendData": true,
        "EventCount": 1
      }
    },
    "pump3": {
      "properties.desired": {
        "SendInterval": 1000,
        "SendData": true,
        "EventCount": 1
      }
    },
    "pump4": {
      "properties.desired": {
        "SendInterval": 1000,
        "SendData": true,
        "EventCount": 1
      }
    }
  }
}