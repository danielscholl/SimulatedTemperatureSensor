{
    "modulesContent": {
      "$edgeAgent": {
        "properties.desired": {
          "schemaVersion": "1.0",
          "runtime": {
            "settings": {
              "minDockerVersion": "v1.25",
              "registryCredentials": {
                "privateRegistry": {
                  "username": "#{acr.user}#",
                  "password": "#{acr.password}#",
                  "address": "#{acr.host}#"
                }
              }
            },
            "type": "docker"
          },
          "systemModules": {
            "edgeAgent": {
              "settings": {
                "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
                "createOptions": ""
              },
              "type": "docker"
            },
            "edgeHub": {
              "settings": {
                "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
                "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"443/tcp\":[{\"HostPort\":\"443\"}],\"5671/tcp\":[{\"HostPort\":\"5671\"}],\"8883/tcp\":[{\"HostPort\":\"8883\"}]}}}"
              },
              "type": "docker",
              "status": "running",
              "restartPolicy": "always"
            }
          },
          "modules": {
            "pump1": {
              "settings": {
                "image": "${MODULES.SampleModule.amd64}",
                "createOptions": {
                  "HostConfig": {
                    "LogConfig": {
                      "Type": "json-file",
                      "Config": {
                        "max-size": "2m",
                        "max-file": "3"
                      }
                    }
                  }
                }
              },
              "type": "docker",
              "version": "1.0",
              "env": {
                "ASSET": {
                  "value": "#{env.asset}#"
                },
                "DEVICE": {
                  "value": "pump1"
                },
                "APPINSIGHTS_INSTRUMENTATIONKEY": {
                  "value": "#{appinsights.instrumentationkey}#"
                }
              },
              "status": "running",
              "restartPolicy": "always"
            },
            "pump2": {
              "settings": {
                "image": "#{acr.host}#/module-pump-win:1.5",
                "createOptions": {
                  "HostConfig": {
                    "LogConfig": {
                      "Type": "json-file",
                      "Config": {
                        "max-size": "2m",
                        "max-file": "3"
                      }
                    }
                  }
                }
              },
              "type": "docker",
              "version": "1.0",
              "env": {
                "ASSET": {
                  "value": "#{env.asset}#"
                },
                "DEVICE": {
                  "value": "pump3"
                },
                "APPINSIGHTS_INSTRUMENTATIONKEY": {
                  "value": "#{appinsights.instrumentationkey}#"
                }
              },
              "status": "running",
              "restartPolicy": "always"
            }
          }  
        }
      },
      "$edgeHub": {
        "properties.desired": {
          "routes": {
            "upstream": "FROM /messages/* INTO $upstream"
          },
          "schemaVersion": "1.0",
          "storeAndForwardConfiguration": {
            "timeToLiveSecs": 7200
          }
        }
      },
      "pump1": {
        "properties.desired": {
          "SendInterval": 10
        }
      },
      "pump2": {
        "properties.desired": {
          "SendInterval": 10
        }
      }
    }
  }